---
export interface Props {
  title?: string;
  description?: string;
}

const { title = "Test Title", description = "Test Description" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style>
      body {
        font-family: system-ui, sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
      }
      header {
        border-bottom: 1px solid #eee;
        padding-bottom: 1rem;
        margin-bottom: 2rem;
      }
      #slot {
        border: 2px dashed #ccc;
        padding: 2rem;
        border-radius: 8px;
        background: #f9f9f9;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>{title}</h1>
      <p>{description}</p>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
